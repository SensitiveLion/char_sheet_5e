<%= form_for @game do |f| %>
  <div class="field">
    <%= f.label :name, "name" %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description, "description" %>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit "Save game"%>
  </div>
<% end %>
